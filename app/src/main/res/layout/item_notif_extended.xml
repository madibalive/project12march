<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    >



        <com.android.liuzhuang.rcimageview.RoundCornerImageView
            android:id="@+id/notif_i_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_marginBottom="@dimen/padding_normal"
            android:src="@color/venu_green" />


        <TextView
            android:id="@+id/notif_i_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_size_medium"
            tools:text="Nick B"
            android:layout_alignBaseline="@+id/accept"
            android:layout_alignBottom="@+id/accept"
            android:layout_toRightOf="@+id/notif_i_avatar"
            android:layout_toEndOf="@+id/notif_i_avatar" />



        <com.example.madiba.venualpha.ui.StateButton
            android:minHeight="@dimen/card_corner_radius_0dp"
            android:minWidth="@dimen/card_corner_radius_0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:normalBackgroundColor="@color/venu_orange"
            app:normalTextColor="@color/white"
            android:textAllCaps="false"
            android:padding="@dimen/padding_normal"
            app:sradius="2dp"
            android:text="Accept"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/accept" />


    <com.example.madiba.venualpha.ui.AnimateCheckBox
        android:visibility="gone"
        android:id="@+id/checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="10dp"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>


    <TextView
        android:gravity="center_vertical"
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_size_large"
        tools:text="| 24 |   Night To Behold "
        android:layout_below="@+id/notif_i_avatar"
        android:textAppearance="@style/AdobeImageWidget.TextAppearance.Medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
