<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    >


    <LinearLayout
        android:id="@+id/name_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.liuzhuang.rcimageview.CircleImageView
            android:id="@+id/notif_i_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@color/venu_green" />


        <TextView
            android:id="@+id/notif_i_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text_size_small"
            android:layout_marginRight="@dimen/dp_4"
            tools:text="Nick B" />



        <com.example.madiba.venualpha.ui.StateButton
            android:minHeight="@dimen/card_corner_radius_0dp"
            android:minWidth="@dimen/card_corner_radius_0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:normalBackgroundColor="@color/venu_blue"
            app:normalTextColor="@color/white"
            android:padding="6dp"
            app:sradius="2dp"
            android:layout_marginRight="@dimen/dp_4"
            android:text="Accept"/>


    </LinearLayout>
    <TextView
        android:layout_margin="@dimen/dp_10"
        android:gravity="center_vertical"
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_text_size_large"
        tools:text="Nick B" />



</LinearLayout>
