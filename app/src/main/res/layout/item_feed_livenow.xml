<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/box_background"
    android:padding="@dimen/padding_normal"
    android:orientation="vertical">


        <TextView
            android:layout_alignParentTop="true"
            android:background="?selectableItemBackgroundBorderless"
            android:text="Happening Now\n#Entertainment"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:background="?selectableItemBackgroundBorderless"
            android:text="more"
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_above="@+id/stats_container"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    <HorizontalScrollView
        android:layout_below="@id/title"
        android:id="@+id/livenow_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/padding_normal"
        android:layout_marginBottom="@dimen/padding_normal">

        <LinearLayout
            android:id="@+id/livenow_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:minHeight="70dp" />
    </HorizontalScrollView>


</RelativeLayout>
