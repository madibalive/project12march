<?xml version="1.0" encoding="utf-8"?>
<com.example.madiba.venualpha.ui.VariableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:src="@color/venu_green"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    >

    <com.android.liuzhuang.rcimageview.RoundCornerImageView
        android:src="@color/venu_orange"
        app:rciv_radius="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="gone"
        android:layout_margin="@dimen/dp_4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_videocam"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/fade_to_50white"
        android:gravity="start"
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="#sasatatasa"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        />

    <View
        android:layout_alignParentBottom="true"
        android:background="@drawable/fade_to_50white"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>


    <TextView
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="4dp"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_above="@id/tag"
        android:id="@+id/views"
        android:drawableLeft="@drawable/venu_person"
        android:text="44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_above="@id/tag"
        android:layout_toRightOf="@id/views"
        android:id="@+id/mememories"
        android:drawableLeft="@drawable/venu_person"
        android:text="44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.madiba.venualpha.ui.VariableLayout>