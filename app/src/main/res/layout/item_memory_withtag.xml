<?xml version="1.0" encoding="utf-8"?>
<com.example.madiba.venualpha.ui.VariableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:VariableLayoutMode="false"
    android:foreground="?android:selectableItemBackground"
    >

    <com.android.liuzhuang.rcimageview.RoundCornerImageView
        app:rciv_radius="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:layout_alignParentBottom="true"
        android:background="@drawable/fade_to_50white"
        android:gravity="start"
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:text="#sasatatasa"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        />

    <View
        android:layout_alignParentBottom="true"
        android:background="@drawable/fade_to_50white"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <TextView
        android:textColor="@color/white"
        android:layout_marginRight="4dp"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_above="@id/tag"
        android:id="@+id/views"
        android:drawableLeft="@drawable/venu_eye"
        android:text="44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_above="@id/tag"
        android:layout_toRightOf="@id/views"
        android:id="@+id/mememories"
        android:drawableLeft="@drawable/venu_person"
        android:text="44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.madiba.venualpha.ui.VariableLayout>