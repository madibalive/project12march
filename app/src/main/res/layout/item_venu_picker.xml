<?xml version="1.0" encoding="utf-8"?>
<com.example.madiba.venualpha.ui.SquareLayout android:id="@+id/going_bgrnd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginRight="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.android.liuzhuang.rcimageview.RoundCornerImageView
        app:rciv_radius="2dp"
        android:id="@+id/avatar"
        android:src="@color/venu_yellow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_alignParentTop="true"
      />

    <ImageButton
        android:background="@android:color/transparent"
        android:tint="@color/venu_red"
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/venu_record"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
       />

    <TextView
        android:paddingTop="@dimen/dp_4"
        android:id="@+id/edit"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        android:layout_below="@+id/avatar"
        android:layout_centerHorizontal="true" />

</com.example.madiba.venualpha.ui.SquareLayout>