<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:seekarc="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_margin="@dimen/padding_normal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="@dimen/padding_normal"
            android:layout_width="match_parent"
            android:background="@drawable/top_rounded_corner_bkg"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageButton
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:id="@+id/overflow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_overflow"
                android:layout_centerVertical="true"

                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/add_memory_btn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="add Images"
                    android:textAllCaps="false"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_grey_300" />

                <Button
                    android:id="@+id/edit_btn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="edit"
                    android:textAllCaps="false"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_grey_300" />
                <Button
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:text="promote"
                    android:textAllCaps="false"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey_200"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.liuzhuang.rcimageview.RoundCornerImageView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="sas"
                app:rciv_radius="2dp"
                android:src="@color/venu_flat_color" />

            <LinearLayout
                android:background="@drawable/bg_main"
                android:layout_gravity="bottom"
                android:padding="@dimen/padding_normal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/ev_date"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"

                    android:text="22\nDec"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ev_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:textColor="@color/white"
                    android:text=" #sadasdasdasd \nin world  anytg resdsbeyond #sgatata \n Location East Adenta \n 9:20 pm"
                    android:textSize="@dimen/app_text_size_medium" />




            </LinearLayout>

        </FrameLayout>





        <android.support.v7.widget.CardView
            android:padding="@dimen/dp_10"
            app:cardElevation="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:id="@+id/attendees_container"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:requiresFadingEdge="horizontal"
                        android:fadingEdgeLength="@dimen/padding_normal"
                        >

                        <LinearLayout
                            android:id="@+id/attendees_layout"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:minHeight="50dp" >


                        </LinearLayout>
                    </HorizontalScrollView>
                    <Button
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:id="@+id/attendees_more"
                        android:text="44 more"
                        android:layout_width="0dp"
                        android:textAllCaps="false"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>


                </LinearLayout>


                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:padding="@dimen/padding_normal"
                    android:id="@+id/sad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Statistic"
                    />



                <HorizontalScrollView
                    android:id="@+id/stats_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="@dimen/padding_normal"
                    android:layout_marginBottom="@dimen/padding_normal">

                    <LinearLayout
                        android:id="@+id/stats_layout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:minHeight="70dp" />
                </HorizontalScrollView>





            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>