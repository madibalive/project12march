<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/status"
        android:text="'@Steve Share"
        android:paddingTop="@dimen/dp_4"
        android:layout_width="match_parent"
        android:textSize="@dimen/app_text_size_small"
        android:layout_height="wrap_content" />


    <com.example.madiba.venualpha.ui.stateimageview.StateImageView
        android:id="@+id/avatar"
        android:layout_below="@id/status"
        android:layout_alignParentLeft="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@color/venu_yellow"
        />

    <TextView
        android:gravity="center_vertical"
        android:text="3 hours ago \nKofi,James,Stevens,di"
        android:id="@+id/name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:layout_toEndOf="@+id/avatar" />


    <TextView
        android:id="@+id/f_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:padding="@dimen/padding_normal"
        android:text="#technologoicalrevolution "
        android:textSize="15sp" />






    <ImageButton
        android:layout_alignTop="@id/avatar"
        android:id="@+id/f_overflow_ic"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_below="@id/f_hashtag"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="350dp">

        <com.example.madiba.venualpha.ui.SquareImageView
            android:id="@+id/main_event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/venu_yellow" />

        <View
            android:background="@drawable/fade_to_50white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="140dp"/>
        <ImageView
            android:layout_margin="@dimen/padding_normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_videocam"/>



        <com.example.madiba.venualpha.ui.SwitchTextView
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/padding_normal"
            app:topImage="@drawable/venu_chat"
            app:imageHeight="25dp"
            app:imageWidth="25dp"
            android:drawablePadding="@dimen/dp_4"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12" />

        <com.example.madiba.venualpha.ui.SwitchTextView
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/comment"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/dp_4"
            app:topImage="@drawable/ic_add"
            app:imageHeight="25dp"
            app:imageWidth="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12" />


        <TextView
            android:layout_above="@id/event_title"
            android:layout_toRightOf="@id/event_date"
            android:id="@+id/main_event_category"
            android:padding="4dp"
            android:text="EnterTainment   Ticket @ 40"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_above="@id/comment"
            android:layout_toRightOf="@id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performing For the Camera sadasd asdadadsd "
            android:textColor="@color/text_black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/event_title"
            />
        <TextView
            android:layout_above="@id/comment"
            android:text="22"
            android:id="@+id/event_date"
            android:background="@drawable/category_background_default"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_marginLeft="@dimen/padding_normal"
             />







        <ImageButton
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/dp_4"
            android:src="@drawable/ic_return"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            />




    </RelativeLayout>

<com.example.madiba.venualpha.ui.SwitchTextView
    android:gravity="center_vertical"
    android:layout_below="@id/container"
    app:topImage="@drawable/venu_person"
    app:imageHeight="15dp"
    app:imageWidth="15dp"
    android:padding="8dp"
    android:text="   Steve,James Be going going to this event "
    android:textSize="@dimen/app_text_size_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />





</RelativeLayout>