<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:background="@color/light_grey"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@android:color/holo_blue_dark"
            android:src="@drawable/ic_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:padding="@dimen/padding_normal"
            android:text="Registration Required"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:gravity="center"
            android:textAppearance="@style/AdobeImageWidget.TextAppearance.Small"
            android:padding="@dimen/padding_normal"
            android:text="BBC Radio 4 Extra’s topical sketch show \nPhone Number would be provided \nName would be required"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.liuzhuang.rcimageview.RoundCornerImageView
                android:background="@color/venu_blue"
                android:layout_width="32dp"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_height="32dp" />

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Kevin Invited you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:gravity="center"
                android:padding="@dimen/padding_normal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:hint="Full Name"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:padding="@dimen/padding_normal"
                android:layout_width="match_parent"
                android:hint="Phone Number"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/padding_normal"
            android:background="@drawable/session_tag_chip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ticket_number"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30sp"
                android:text="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="60dp"
                android:layout_height="50dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey_300" />

            <LinearLayout
                android:padding="@dimen/padding_normal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ticket_price"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="$150 -  $100 \n 20% discount "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ticket_amount"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="x $20 = $40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey_300" />
            <LinearLayout
                android:padding="@dimen/padding_normal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/ticket_increase"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/ticket_decrease"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_add"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:gravity="center"
            android:text="BBC Radio 4 Extra’s topical 16th series with brand new host Angela Barnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.example.madiba.venualpha.ui.StateButton
            android:layout_marginTop="@dimen/dp_22"
            android:id="@+id/cc_i_unfollow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Invite "
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:sradius="2dp"
            app:normalBackgroundColor="@android:color/holo_blue_dark"
            app:normalTextColor="@color/white"
            app:pressedStrokeWidth="1dp"
            app:pressedStrokeColor="@android:color/white"
            app:pressedBackgroundColor="@color/white"
            app:pressedTextColor="@android:color/holo_blue_dark"/>

    </LinearLayout>
</LinearLayout>