<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/status"
        android:text="'@Steve Share"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:layout_width="match_parent"
        android:textSize="@dimen/app_text_size_small"
        android:layout_height="wrap_content" />


    <com.example.madiba.venualpha.ui.stateimageview.StateImageView
        android:id="@+id/avatar"
        android:layout_below="@id/status"
        android:layout_alignParentLeft="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@color/venu_yellow"
        />

    <TextView
        android:text="3 hours ago \nKofi,James,Stevens,di"
        android:id="@+id/name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:layout_toEndOf="@+id/avatar" />

    <TextView
        android:id="@+id/hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:padding="@dimen/padding_normal"
        android:text="#technologoicalrevolution "
        android:textSize="15sp" />

    <ImageButton
        android:layout_alignTop="@id/avatar"
        android:id="@+id/overflow_btn"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.madiba.venualpha.ui.SquareLayout
        android:id="@+id/container"
        android:layout_below="@id/hashtag"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <com.example.madiba.venualpha.ui.stateimageview.StateImageView
            android:id="@+id/main_event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/venu_yellow" />


        <com.example.madiba.venualpha.ui.SwitchTextView
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/dp_4"
            android:drawableLeft="@drawable/venu_album"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12" />
        <View
            android:background="@drawable/bg_main"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>



        <ImageButton
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/dp_4"
            android:src="@drawable/ic_return"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            />




        <com.example.madiba.venualpha.ui.SwitchTextView
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/dp_4"
            android:drawableLeft="@drawable/venu_eye"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12" />


        <TextView
            android:layout_toRightOf="@id/views"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/padding_normal"
            android:drawablePadding="@dimen/dp_4"
            android:drawableLeft="@drawable/venu_chat"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12" />

    </com.example.madiba.venualpha.ui.SquareLayout>

    <TextView
        android:id="@+id/extra"
        android:gravity="center_vertical"
        android:layout_below="@id/container"
        android:drawableLeft="@drawable/venu_person"
        android:padding="8dp"
        android:text=" More memeries  "
        android:textSize="@dimen/app_text_size_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />






</RelativeLayout>