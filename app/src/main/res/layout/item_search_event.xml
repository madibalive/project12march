<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_4"
   >

    <ImageView
        android:id="@+id/ev_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:background="@color/venu_yellow" />

    <TextView
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/ev_image"
        android:text="22\nDEC"
        android:id="@+id/ev_status"
        android:background="@drawable/category_background_default"
        android:gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/venu_red"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/ev_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ev_status"
        android:text="Event Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/black" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/ev_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ev_title"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/ev_status"
        android:textColor="@color/venu_flat_color"
        android:text="#event suprised"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


</RelativeLayout>